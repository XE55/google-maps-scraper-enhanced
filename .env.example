# Application
APP_NAME=google-maps-scraper-enterprise
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8001
WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
API_KEY_SALT=your-api-key-salt-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
ADMIN_PASSWORD=change-this-immediately

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=1000

# Database
DATABASE_URL=postgresql+asyncpg://gmaps_user:changeme123@localhost:5432/gmaps_scraper
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Scraping Configuration
MAX_PLACES_LIMIT=500
DEFAULT_MAX_PLACES=20
SCRAPE_TIMEOUT_SECONDS=300
BROWSER_POOL_SIZE=5
SCROLL_PAUSE_TIME=2.0

# Playwright
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# Anti-Detection
MIN_REQUEST_DELAY=3.0
MAX_REQUEST_DELAY=8.0
USE_STEALTH_MODE=true
ROTATE_USER_AGENTS=true

# Proxy Configuration
PROXY_PROVIDER=none
PROXY_LIST=
PROXY_ROTATION_STRATEGY=round-robin

# Data Enrichment APIs
ENABLE_EMAIL_ENRICHMENT=false
ENABLE_GEOCODING=false
ENABLE_BUSINESS_ENRICHMENT=false

# Hunter.io API
HUNTER_API_KEY=

# Email Verification
EMAIL_VERIFICATION_PROVIDER=neverbounce
NEVERBOUNCE_API_KEY=
ZEROBOUNCE_API_KEY=

# Google Geocoding API
GOOGLE_GEOCODING_API_KEY=

# Clearbit
CLEARBIT_API_KEY=

# Lead Scoring
MIN_LEAD_SCORE=50
LEAD_SCORE_EMAIL_WEIGHT=30
LEAD_SCORE_PHONE_WEIGHT=25
LEAD_SCORE_WEBSITE_WEIGHT=20
LEAD_SCORE_RATING_WEIGHT=15
LEAD_SCORE_REVIEWS_WEIGHT=10

# Cost Management
MONTHLY_BUDGET_USD=1000
COST_PER_PROXY_REQUEST=0.001
ALERT_AT_BUDGET_PERCENT=80

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Google Maps
GOOGLE_MAPS_BASE_URL=https://www.google.com/maps/search/
